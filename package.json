		"@types/lodash": "^4.14.171",
		"vue": "^3.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ofcold/security-code.git"
	},
	"keywords": [
		"security-code",
		"input",
		"vue"
