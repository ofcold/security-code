	    "stylelint-scss": "^3.19.0",
	    "ts-jest": "^27.0.3",
	    "ts-loader": "^9.2.3",
	    "tslib": "^2.3.0",
	    "typescript": "^4.3.2",
	    "vue": "^3.1.1",
	    "vue-loader": "^16.1.2",
	    "webpack": "^5.38.1",
	    "webpack-cli": "^4.7.2",
	    "webpack-dev-server": "^3.11.2"
	},
