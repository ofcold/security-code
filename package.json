	    "eslint-plugin-vue": "^7.11.0",
	    "html-webpack-plugin": "^5.3.1",
	    "husky": "^6.0.0",
	    "jest": "^27.0.4",
	    "lint-staged": "^11.0.0",
	    "markdown-to-vue-loader": "^3.1.0",
	    "mini-css-extract-plugin": "^1.6.0",
